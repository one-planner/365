<!DOCTYPE html>
<html lang='en'>
<head>
<meta charset="UTF-8">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/main.css">
<!-- FullCalendar 스크립트 추가 -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/main.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@2.24.0/moment.min.js"></script>
<script src="/webjars/jquery/3.7.1/jquery.min.js"></script>
<!-- SweetAlert2 스크립트 추가 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>



<title>Insert title here</title>
</head>
<body>
    <div id='calendar'></div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            
          
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: '/calendar/cinsert', // URL로 직접 events를 설정할 수 있음
                selectable: true,
                select: function(info) {
                    // info 객체에 선택된 날짜의 정보가 담겨 있음
                    var selectedDate = info.start;
                    // Ajax로 선택된 날짜를 서버로 전송하고 처리
                    $.ajax({
                        url: '/calendar/cinsert',
                        method: 'POST', // 예시로 POST 메서드 사용
                        data: { date: selectedDate },
                        success: function(response) {
                            // 서버에서 받은 응답에 따라 처리
                            console.log(response);
                            // 달력을 다시 렌더링하거나 업데이트
                            calendar.refetchEvents();
                        },
                        error: function(error) {
                            console.error(error);
                        }
                    });
                }
            });
            

            calendar.render();
        });
    </script>
</body>
</html>
